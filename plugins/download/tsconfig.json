{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "importHelpers": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true
  },
  "include": ["src/*"]
}
